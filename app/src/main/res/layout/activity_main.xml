<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="sv.edu.bitlab.tarea3.MainActivity"


        android:id="@+id/frameLayout">

    <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:id="@+id/headText" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="185dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="185dp" android:text="TextView" app:layout_constraintHorizontal_bias="0.503"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline13"/>
        <Button
                android:text="1"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/one" app:layout_constraintStart_toStartOf="@+id/guideline12"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline10" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline13"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline14"/>
        <Button
                android:text="2"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/two"
                app:layout_constraintStart_toStartOf="@+id/guideline10"
                android:layout_marginStart="32dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline9" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline13"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline14"/>
        <Button
                android:text="3"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/three"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline9" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.517"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline13"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline14"/>
        <Button
                android:text="4"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/four" app:layout_constraintStart_toStartOf="@+id/guideline12"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline10" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline15" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline14"/>
        <Button
                android:text="5"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/five"
                app:layout_constraintStart_toStartOf="@+id/guideline10" android:layout_marginStart="32dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline15"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline14"/>
        <Button
                android:text="7"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/seven" app:layout_constraintStart_toStartOf="@+id/guideline12"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/eight" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline16" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline15"/>
        <Button
                android:text="8"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/eight"
                app:layout_constraintStart_toStartOf="@+id/guideline10" android:layout_marginStart="32dp"
                app:layout_constraintEnd_toStartOf="@+id/nine"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/guideline16"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline15"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline9"
                                                    app:layout_constraintGuide_begin="187dp"
                                                    android:orientation="vertical"/>
        <Button
                android:text="6"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/six" app:layout_constraintStart_toStartOf="@+id/guideline9"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.517"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline15"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline14"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline10"
                                                    app:layout_constraintGuide_begin="119dp"
                                                    android:orientation="vertical"/>
        <Button
                android:text="9"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/nine" app:layout_constraintStart_toStartOf="@+id/guideline9"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.517"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/guideline16"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline15"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline11"
                                                    android:orientation="horizontal"
                                                    app:layout_constraintGuide_percent="0.75"/>
        <Button
                android:text="@string/call"
                style="@style/AppTheme.callButton"

                android:id="@+id/callButton" android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <Button
                android:text="*"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/cButton" app:layout_constraintStart_toStartOf="@+id/guideline12"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline10" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.111" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline17" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline16"/>
        <Button
                android:text="0"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/zero" app:layout_constraintStart_toStartOf="@+id/guideline10"
                android:layout_marginStart="32dp"
                app:layout_constraintEnd_toStartOf="@+id/erase" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline17" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline16"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/guideline12"
                                                    app:layout_constraintGuide_begin="48dp"
                                                    android:orientation="vertical"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/guideline13"
                                                    android:orientation="horizontal"
                                                    app:layout_constraintGuide_percent="0.14"/>
        <ImageButton
                android:text="Delete"
                android:layout_width="62dp"
                android:layout_height="46dp"
                android:id="@+id/erase"

                android:background="@color/white_transparesnt"
                android:src="@drawable/ic_backspace_black_24dp"

                app:layout_constraintStart_toStartOf="@+id/guideline9" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.492" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline17" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline16"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/guideline14"
                                                    app:layout_constraintGuide_begin="210dp"
                                                    android:orientation="horizontal"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/guideline15"
                                                    app:layout_constraintGuide_begin="299dp"
                                                    android:orientation="horizontal"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/guideline16"
                                                    app:layout_constraintGuide_begin="401dp"
                                                    android:orientation="horizontal"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/guideline17"
                                                    app:layout_constraintGuide_begin="506dp"
                                                    android:orientation="horizontal"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:id="@+id/blackFrame"
                 android:visibility="gone"
                 android:background="@color/black_transparent">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="match_parent">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/calling"
                      android:id="@+id/callingTxtview"
                      android:layout_gravity="center_vertical|center_horizontal"
                      android:textSize="90sp"
                      android:visibility="gone"
                      android:textColor="@color/white"


                      android:layout_marginTop="56dp"
                      app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                      app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.495"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="number"
                      android:id="@+id/callingNumberTxtview"
                      android:layout_gravity="center_vertical|center_horizontal"
                      android:textSize="80sp"
                      android:visibility="gone"
                      android:textColor="@color/white"


                      android:layout_marginStart="8dp"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="56dp"
                      app:layout_constraintTop_toBottomOf="@+id/callingTxtview"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>


</FrameLayout>

