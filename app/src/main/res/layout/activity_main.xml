<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="sv.edu.bitlab.tarea3.MainActivity"


        android:id="@+id/frameLayout">

    <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:id="@+id/headText" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="185dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="185dp" android:text="TextView" app:layout_constraintHorizontal_bias="0.503"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline13"/>
        <Button
                android:text="1"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/one"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/four"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline13"
                app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="1.0"/>
        <Button
                android:text="2"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/two"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/five"
                app:layout_constraintTop_toBottomOf="@+id/headText"
                app:layout_constraintTop_toTopOf="@+id/guideline13"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintStart_toStartOf="@+id/guideline2" app:layout_constraintStart_toEndOf="@+id/one"
        />
        <Button
                android:text="3"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/three"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/six"
                app:layout_constraintTop_toTopOf="@+id/guideline13"
                app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/two"/>
        <Button
                android:text="4"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/four"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/seven" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/one" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="1.0"/>
        <Button
                android:text="5"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/five"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/eight"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/two"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline2"
                android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/four"
        />
        <Button
                android:text="7"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/seven"
                app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/cButton" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/four" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"/>
        <Button
                android:text="8"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/eight"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/zero"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/five"
                app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/zero"/>
        <Button
                android:text="6"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/six"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/nine"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/three"
                app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/five"/>
        <Button
                android:text="9"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/nine"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/erase"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/six"
                app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/eight"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline11"
                                                    android:orientation="horizontal"
                                                    app:layout_constraintGuide_percent="0.84"/>
        <Button
                android:text="@string/call"
                style="@style/AppTheme.callButton"

                android:id="@+id/callButton" android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <Button
                android:text="*"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/cButton"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/seven" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline11" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="1.0"/>
        <Button
                android:text="0"
                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"
                android:id="@+id/zero"
                app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/eight" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline11"
                app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/cButton"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/guideline13"
                                                    android:orientation="horizontal"
                                                    app:layout_constraintGuide_percent="0.14"/>
        <ImageButton
                android:text="Delete"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/erase"

                android:background="@color/white_transparesnt"
                android:src="@drawable/ic_backspace_black_24dp"

                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/nine" app:layout_constraintBottom_toTopOf="@+id/guideline11"
                android:layout_marginBottom="8dp" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline3" app:layout_constraintStart_toEndOf="@+id/zero"
        />
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/guideline2"
                                                    android:orientation="vertical"
                                                    app:layout_constraintGuide_percent="0.3649635"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/guideline3"
                                                    android:orientation="vertical"
                                                    app:layout_constraintGuide_percent="0.65"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:id="@+id/blackFrame"
                 android:visibility="gone"
                 android:background="@color/black_transparent">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="match_parent">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/calling"
                      android:id="@+id/callingTxtview"
                      android:layout_gravity="center_vertical|center_horizontal"
                      android:textSize="90sp"
                      android:visibility="gone"
                      android:textColor="@color/white"


                      android:layout_marginTop="56dp"
                      app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                      app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.495"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="number"
                      android:id="@+id/callingNumberTxtview"
                      android:layout_gravity="center_vertical|center_horizontal"
                      android:textSize="80sp"
                      android:visibility="gone"
                      android:textColor="@color/white"


                      android:layout_marginStart="8dp"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="56dp"
                      app:layout_constraintTop_toBottomOf="@+id/callingTxtview"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>


</FrameLayout>

